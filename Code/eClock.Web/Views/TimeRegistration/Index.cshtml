@model eClock.Web.Models.TimeRegistrationViewModel

@{
    ViewBag.Title = "Weekly Time Registration";
}

@Styles.Render("~/Content/jqueryui")

<h2>Time Registration</h2>

<div class="time-reg-column employee-week-selection">
    @Html.Partial("_EmployeeWeekSelection", Model.EmployeeWeekSelectionVM)
</div>

<div class="time-reg-column work-item-finder">
    @Html.Partial("WorkItemFinder", Model.WorkItemFinderVM)
</div>

<div data-container="registration-grid">
    @Html.Partial("_TimeRegistrationGrid", Model.TimeRegistrations)
</div>

@section Scripts {
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
    <script src="~/Scripts/TimeReg/eClock.TimeReg.js"></script>
}

